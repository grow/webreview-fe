<form class="form" {{action "updateUser" on="submit"}}>

  <div class="form-field">
    <label>Profile picture</label>
    {{avatar-form-control
        url=user.avatar_url}}
  </div>

  <div class="form-field">
    <label>Username</label>
    {{input type="text" value=user.nickname class="form-control" readonly="true"}}
  </div>

  <div class="form-field">
    <label>Email</label>
    {{input type="text" value=user.email class="form-control" readonly="true"}}
  </div>

  <div class="form-field">
    <label>Name</label>
    {{input type="text" value=user.name class="form-control"}}
  </div>

  <div class="form-field">
    <label>Location</label>
    {{input type="text" value=user.location class="form-control"}}
  </div>

  <div class="form-field">
    <button type="submit" class="btn btn--primary">Save</button>
  </div>

  {{#each error in errors}}
    <p>{{error.detail}}</p>
  {{/each}}
</form>

