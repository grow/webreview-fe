<form class="form" {{action "createProject" on="submit"}}>
  <div class="form-field">
    <label>Owner</label>
    {{input
        type="text"
        value=project.owner.nickname
        class="form-control"
        autofocus="true"}}
  </div>

  <div class="form-field">
    <label>Name</label>
    {{input
        type="text"
        value=project.nickname
        class="form-control"
        required="required"}}
  </div>

  <div class="form-field">
    <label>Repository URL</label>
    {{input
        type="text"
        value=project.git_url
        class="form-control form-control--max"
        placeholder="https://example.com/project.git"}}
    <div class="form-field-help">
      Enter the URL to this project's Git repository to enable build integrations.
    </div>
  </div>

  <div class="form-field">
    <label>Description</label>
    <textarea class="form-control" value=description></textarea>
  </div>

  <div class="form-field form-field--last">
    <button type="submit" class="btn btn--primary">Create</button>
  </div>

  {{error-list
    errors=errors}}
</form>
