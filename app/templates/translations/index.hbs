<h2>Translations</h2>

<table class="table">
  <thead>
    <tr>
      <td>Identifier</td>
      <td>Name</td>
      <td>% translated</td>
      <td>Last modified</td>
    </tr>
  </thead>
  {{#each model.catalogs as |catalog|}}
    <tr>
      <td>
        {{catalog.locale}}
      </td>
      <td>
        {{#link-to 'translations.locale' model.project.owner.nickname model.project.nickname catalog.locale}}{{catalog.name}}{{/link-to}}
      </td>
      <td>
        {{catalog.percent_translated}}
      </td>
      <td>
        {{catalog.modified}}
      </td>
    </tr>
  {{/each}}
</table>

{{error-list
    errors=model.errors}}
